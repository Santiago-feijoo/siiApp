<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_despacho_viajes_colaborador"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/autobus" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/texto_permiso_viajes_colaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de permiso"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_placa_viajes_colaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Placa del vehiculo" />

                <TextView
                    android:id="@+id/texto_rutas_viajes_colaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Origen - Destino" />

                <TextView
                    android:id="@+id/texto_despacho_viajes_colaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Despachado por" />

                <TextView
                    android:id="@+id/texto_fecha_viajes_colaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>